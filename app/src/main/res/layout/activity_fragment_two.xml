<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3E80B4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/smartbox_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/smartbox_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#777777"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="RANDOM STATISTICS"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/smartbox_lastreftv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Last Refreshed -"
                    android:textSize="25sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/smartbox_subtitel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Most Webmails from -"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/smartbox_mostsender1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Most Sender 1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/smartbox_mostsender2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Most Sender 2"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/smartbox_mostsender3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Most Sender 3"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/smartbox_divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/smartbox_stats"
                android:layout_centerHorizontal="true"
                android:background="#FFB400"
                android:text=""
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/smartbox_divider"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/smartbox_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#777777"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Write to me!"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/smartbox_sendbutton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/splash4_btnnext"
                    android:layout_weight="0.15"
                    android:background="#FFB400"
                    android:padding="5dp"
                    android:src="@drawable/ic_action_mail_add" />

                <TextView
                    android:id="@+id/smartbox_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="As promised, this place has to be really exciting. I have a few ideas, but it would be great to hear from you!\n\nThis is how we visualize the page : \n\nMost webmails really dont matter to us. And in the mess of all the webmails from SEN groups with their surveys and the sports committee with their updates every now and then.\n\nSo. You see only those webmails that really count. Choose which webmail you wish to ignore!\n\nLet me know if you have any other ideas. It&apos;d be great to see your views come up!"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>