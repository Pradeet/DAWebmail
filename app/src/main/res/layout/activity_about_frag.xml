<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rish.crearo.dawebmail.AboutFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/aboutbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:color="#F0F0F0"
                android:gravity="left"
                android:padding="2dp"
                android:text="Button"
                android:textColor="@color/black"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/aboutbutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:color="#F0F0F0"
                android:gravity="left"
                android:padding="2dp"
                android:text="Button"
                android:textColor="@color/black"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/aboutbutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:color="#F0F0F0"
                android:gravity="left"
                android:padding="2dp"
                android:text="Button"
                android:textColor="@color/black"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/aboutbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_shape"
                android:color="#F0F0F0"
                android:gravity="left"
                android:padding="2dp"
                android:text="Button"
                android:textColor="@color/black"
                android:textIsSelectable="true" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/final_main" />

            <TextView
                android:id="@+id/about_selfdestruct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="App self destructs on:" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>